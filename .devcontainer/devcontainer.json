{
  "name": "GustyWeather Dev Container",
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".." // Make sure this context is correct relative to devcontainer.json
  },  // No need for "args" or "VARIANT" if using node:22 directly

  "workspaceFolder": "/workspaces/app", // Consistent with WORKDIR. NO ${localWorkspaceFolderBasename}
  "mounts": [
    "source=${localWorkspaceFolder},target=/workspaces/app,type=bind,consistency=cached"  // Also /workspaces/app
  ],

  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.shell.linux": "/bin/sh"
      }
    }
  },
  "postCreateCommand": "npm install", // If you need any post-create setup
  "forwardPorts": [3000]
 // "remoteUser": "node"  // Only include if your Dockerfile sets up a 'node' user
}